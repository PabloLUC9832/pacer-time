model Runner {
  id               String   @id @default(uuid())
  bib              String   @unique /// Número de dorsal
  name             String   /// Nombre
  position         Int      /// Posición en la carrera
  //branchPosition   Int      @map("branch_position") /// Posición en la rama
  //categoryPosition Int      @map("category_position") /// Posición en la categoría
  laps             Int      /// Número de vueltas completadas
  distance         String   /// Distancia acumulada
  //mode             String   /// Modalidad
  category         String   /// Categoría
  branch           Branch   /// Rama
  club             String   /// Club

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt

  @@map("runners")
}

enum Branch {
  V // Varonil
  F // Femenil
}